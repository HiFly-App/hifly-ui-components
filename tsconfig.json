{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-native", // Keep this as is
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist", // Emit all output (JS & d.ts) to dist
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false // Change this to false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "files": ["emotion.d.ts", "declaration.d.ts"] // Ensure this file exists
}
